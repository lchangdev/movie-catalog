<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Movie Catalog</title>
</head>

<body>

<table>
  <thead>
    <tr>
      <th>Movie Title</th>
      <th>Year</th>
      <th>Rating</th>
      <th>Genre</th>
      <th>Studio Name</th>
    </tr>
  </thead>
  <% @movies_data.each do |movie| %>
    <tr>
      <td>
        <a href="<%= url("/movies/#{movie["id"]}") %>">
        <%= movie["title"] %>
        </a>
      </td>
      <td>
        <%= movie["year"] %>
      </td>
      <td>
        <%= movie["rating"] %>
      </td>
      <td>
        <%= movie["genre"] %>
      </td>
      <td>
        <%= movie["studio_name"] %>
      </td>
    </tr>
  <% end %>
</table>
<br>
        <a href="<%= "/movies?page=#{@next_page_num}" %>">
          Next Page
        </a>
</body>
</html>
